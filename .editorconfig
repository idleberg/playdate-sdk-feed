root = true

[*]
charset = utf-8
indent_style = tab

[*.{js,json,ts,yml}]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,mjs,ts}]
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_style = space
